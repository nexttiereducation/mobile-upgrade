{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "paths": {
            "@nte/components/*": ["app/components/*"],
            "@nte/constants/*": ["app/constants/*"],
            "@nte/interfaces/*": ["app/interfaces/*"],
            "@nte/models/*": ["app/models/*"],
            "@nte/pipes/*": ["app/pipes/*"],
            "@nte/providers/*": ["app/providers/*"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
